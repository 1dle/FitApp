<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvERburned">

        <TextView
            android:id="@+id/btnERdiscard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="Discard"
            android:textColor="@color/pink"
            android:textSize="16sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnERaddtoDiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to diary"
            android:textColor="@color/pink"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="GPS exercise result"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tvERactivityType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Activity type: @"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />

    <TextView
        android:id="@+id/tvERdistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Distance travelled: @ km"
        app:layout_constraintStart_toStartOf="@+id/tvERactivityType"
        app:layout_constraintTop_toBottomOf="@+id/tvERactivityType" />

    <TextView
        android:id="@+id/tvERduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Duration of exercise: @"
        app:layout_constraintStart_toStartOf="@+id/tvERdistance"
        app:layout_constraintTop_toBottomOf="@+id/tvERdistance" />

    <TextView
        android:id="@+id/tvERburned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Burned: @ kcals"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvERavgSpeed"
        app:layout_constraintTop_toBottomOf="@+id/tvERavgSpeed" />

    <TextView
        android:id="@+id/tvERavgSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Average speed: @ m/s"
        app:layout_constraintStart_toStartOf="@+id/tvERduration"
        app:layout_constraintTop_toBottomOf="@+id/tvERduration" />
</androidx.constraintlayout.widget.ConstraintLayout>