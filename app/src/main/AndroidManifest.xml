            android:theme="@style/AppTheme.NoActionBar" />
        <activity

            android:name=".ui.diary.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" >

        </activity>
        <activity android:name=".ui.diary.SearchMnEActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ui.createprofile.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.diary.EditMealActivity" />

    </application>

</manifest>